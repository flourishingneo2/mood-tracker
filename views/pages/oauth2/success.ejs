<!DOCTYPE html>
<html lang="en">

<%
  const url = new URL(redirect_uri);

  if (error) {
    url.searchParams.set("error", error.code);
    url.searchParams.set("description", error.message || "");
  } else {
    url.searchParams.set("code", code);
  }
%>

<head>
  <%- include('../../partials/head') %>
  <meta http-equiv="refresh" content="2; url=<%= url.toString() %>">
</head>
<body>
  <main>
    <h1>Successfully authorized.</h1>
    <p>You are being redirected to the application. Please wait...</p>
    <hr>
    <a href="<%= url.toString() %>" class="gray"><p>[go directly]</p></a>
  </main>
</body>
</html>
